{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
  ],
  dependencyDashboard: true,
  dockerfile: {
    enabled: false,
  },
  pip_requirements: {
    enabled: false,
  },
  'pre-commit': {
    enabled: true,
  },
  packageRules: [
    {
      matchManagers: [
        'pre-commit',
      ],
      groupName: 'pre-commit-deps',
      matchPackageNames: [
        '*',
      ],
    },
  ],
  schedule: [
    'every 1 months on the first day of the month',
  ],
  automerge: true,
}
